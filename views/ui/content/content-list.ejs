<!-- main container -->
<div class="content">
    <div class="container-fluid">
        <div id="pad-wrapper" class="users-list">
            <div class="row-fluid header">
                <h3>文章列表</h3>
                <div class="form-group">
                    <span class="type-category">上下线列表：</span>
                    <select class="selectpicker" id="type-category-list"
                            onchange="ListByStatus(this.options[this.options.selectedIndex].value)" data-size="8">
                        <option value="0">全部</option>
                        <option value="1" <%= status == '1' ? 'selected' : '' %>>上线</option>
                        <option value="-1" <%= status == '-1' ? 'selected' : '' %>>下线</option>
                    </select>
                </div>
                <div style="margin-left: 81%">
                    <a class="btn btn-success" href="/content/add">添加</a>
                </div>
            </div>
            <!-- Users table -->
            <div class="row-fluid table">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th class="span1 sortable">
                            序号
                        </th>
                        <th class="span2 sortable">
                            标题
                        </th>
                        <th class="span1 sortable">
                            来源
                        </th>
                        <th class="span1 sortable">
                            阅读量
                        </th>
                        <th class="span1 sortable">
                            评论数
                        </th>
                        <th class="span1 sortable">
                            点赞数
                        </th>
                        <th class="span1 sortable">
                            状态
                        </th>
                        <th class="span2 sortable">
                            创建时间
                        </th>
                        <th class="span2 sortable">
                            操作
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0;i < list.length;i++) { var content = list[i] %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= content.title %>
                        </td>
                        <td>
                            <%= content.source %>
                        </td>
                        <td>
                            <%= content.readNum %>
                        </td>
                        <td>
                            <%= content.remarkNum %>
                        </td>
                        <td>
                            <%= content.admireNum %>
                        </td>
                        <td>
                            <%= content.status %>
                        </td>
                        <td>
                            <%= content.createTime %>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/content/<%= content.id %>">详情</a>
                            <a class="btn btn-danger" onclick="delContent('<%= content.id %>')">删除</a>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- end main container -->