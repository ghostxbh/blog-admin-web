<!-- main container -->
<div class="content">
    <div class="container-fluid">
        <div id="pad-wrapper" class="users-list">
            <div class="row-fluid header">
                <h3>友链列表</h3>
                <div class="form-group">
                    <span class="type-category">上下线列表：</span>
                    <select class="selectpicker" id="type-category-list"
                            onchange="ListByStatus(this.options[this.options.selectedIndex].value)" data-size="8">
                        <option value="0">全部</option>
                        <option value="1" <%= status == '1' ? 'selected' :''%>>上线</option>
                        <option value="-1" <%= status == '-1' ? 'selected' :''%>>下线</option>
                    </select>
                </div>
                <div style="margin-left: 82.3%">
                    <button class="btn btn-success" id="link-add">添加</button>
                </div>
            </div>
            <!-- Users table -->
            <div class="row-fluid table">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th class="span1 sortable">
                            序号
                        </th>
                        <th class="span2 sortable">
                            url
                        </th>
                        <th class="span2 sortable">
                            名称
                        </th>
                        <th class="span1 sortable">
                            跳转数
                        </th>
                        <th class="span1 sortable">
                            排序
                        </th>
                        <th class="span1 sortable">
                            状态
                        </th>
                        <th class="span2 sortable">
                            创建时间
                        </th>
                        <th class="span2 sortable">
                            操作
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0;i < list.length;i++) { var link = list[i] %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <a href="<%= link.url %>" target="_blank"><%= link.url %></a>
                        </td>
                        <td>
                            <%= link.name %>
                        </td>
                        <td>
                            <%= link.clickNum %>
                        </td>
                        <td>
                            <%= link.sort %>
                        </td>
                        <td>
                            <% if(link.status > 0){ %>
                                上线
                            <% }else { %>
                                下线
                            <% } %>
                        </td>
                        <td>
                            <%= link.createTime %>
                        </td>
                        <td>
                            <button class="btn btn-info" onclick="modifyClick('<%= JSON.stringify(link) %>')">修改
                            </button>
                            <button class="btn btn-danger" onclick="deleteClick('<%= link.id %>')">删除</button>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- end main container -->